



<form Nombre="editar" data-Nombre="<%= contratos.Nombre %>">
        <input 
            type="text"
            value="<%= contratos.nombre %>"
            class="form-control my-2"
            name="nombre"
            id="nombreInput"
        >
        <input 
            type="text"
            value="<%= contratos.descripcion %>"
            class="form-control my-2"
            name="descripcion"
            id="descripcionInput"
        >
        <button
            class="btn btn-warning btn-sm"
            type="submit"
        >
            Editar
        </button>
    </form>
    <hr>
    <button
        class="btn btn-danger btn-sm"
        data-id="<%= contratos.Nombre %>"
    >
        Eliminar
    </button>



